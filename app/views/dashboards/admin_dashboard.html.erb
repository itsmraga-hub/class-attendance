<% if current_admin %>
  <section>
    <h2>Admin Dashboard</h2>
  </section>
  <section>
    <%= form_tag(authenticated_admin_dashboard_path, method: :get) do %>
      <%= text_field_tag(:search, params[:search]) %>
      <%= submit_tag("Search") %>
    <% end %>
    <% @students.each do |student| %>
      <%= render student %>
    <% end %>
  </section>
  <section>
    <h1>My Departments</h1>
    <% @departments.each do |department| %>
      <%= render department %>
    <% end %>
    <%= link_to 'Add New Department', new_admin_department_path(current_admin)%>
  </section>
  <section class="admin-links">
    <%= link_to 'Students', students_path %>
    <%= link_to 'Departments', departments_path %>
    <%= link_to 'Courses', courses_path %>
  </section>
<% end %>
